#include <set>
#include <map>
#include <queue>
#include <ctime>
#include <cmath>
#include <cstdio>
#include <vector>
#include <string>
#include <fstream>
#include <cstring>
#include <sstream>
#include <typeinfo>
#include <iostream>
#include <algorithm>
using namespace std;

typedef long long int64;

// SRM 639 Div 2
// AliceGameEasy  500
// Memo Limit: 256 MB
// Time Limit: 2000 ms
const int MAXN = 2100000;

class AliceGameEasy {
  public:
  int64 findMinimumValue(int64 x, int64 y) {
    int64 n = -1;
    int64 z = x + y;
    for(int64 i = 0; i <= MAXN; ++i) {
      if(i*(i+1)/2 == z) {
        n = i; break;
      }
    }
    if(n == -1) return n;
    else ++n;
    int ans = 0;
    while(--n) {
      if(x > n) {
        x -= n;
        ans++;
      } else if(x == n) {
        ans++;
        break;
      }
    }
    return ans;
  }
};
